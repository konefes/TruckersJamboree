.container
   #navigation
      %ul.nav.nav-tabs
         %li.active#nav_all_li{:role => "presentation"}
            %a#nav_all{:href => "#"} All Vendors
         %li#nav_booth_li{:role => "presentation"}
            %a#nav_booth{:href => "#"} Booth Preference
         %li#nav_custom_booth_li{:role => "presentation"}
            %a#nav_custom_booth{:href => "#"} Custom Booth
         %li#nav_services_li{:role => "presentation"}
            %a#nav_services{:href => "#"} Services
   %p
   
   #booth_search{:style=> "display: none;"}
      .panel.panel-info
         .panel-heading
            Filter by booth preferences:
         .panel-body
            %table.table
               %tbody
                  %tr
                     %td 
                        %input#number_i_booth{:type => "checkbox"}
                        Inside Booth
                     %td 
                        %input#number_o_booth{:type => "checkbox"}
                        Outside Booth
                     %td 
                        %input#custom{:type => "checkbox"}
                        Custom
      
   
   #services_search{:style=> "display: none;"}
      .panel.panel-info
         .panel-heading
            Filter by requested services:
         .panel-body
            %table.table
               %tbody
                  %tr
                     %td 
                        %input.filter_services1#ext_chairs{:type => "checkbox"}
                        Extra Chairs
                     %td 
                        %input.filter_services1#ext_tables{:type => "checkbox"}
                        Extra Tables
                     %td 
                        %input.filter_services1#electric{:type => "checkbox"}
                        Electric
   
   .panel.panel-info
      .panel-body
         Click link for full details.
         %table.table#Vendors
            %thead
               %tr
                  %th Company Name
                  %th Contact Person
                  %th Contact Number
            %tbody
               - @vendors.each do |vendor|
                  %tr{:id => "#{vendor.id}"}
                     %td 
                        %a.vendor_link{:href => "#", :id => "#{vendor.id}"} #{vendor.company_name} 
                     %td= vendor.contact_name
                     %td= vendor.phone
                     %td{:hidden => 'true', :id => "ext_chairs"}
                        =vendor.ext_chairs
                     %td{:hidden => 'true', :id => "ext_tables"}
                        =vendor.ext_tables
                     
   #individual{:style=> "display: none;"}