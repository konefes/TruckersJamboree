.container
  %form#vendor{:action => "enter_services", :method => "post", :class => "form-horizontal"}
    .mainbox.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
      .panel.panel-info
        .panel-heading 
          %h4 Additional Service Request
        .panel-body
          %h2 Booth Services
          
          .form-group
            %label{:for => "forklift", :class => "col-md-8 control-label"}
              Forklift Service in 15 min intervals($100 per hour. $25 mininum)
            .col-md-4
              %input#forklift.form-control{:max => "8", :min => "0", :name => "forklift", :oninput => "calcService()", :required => "", :step => "1", :type => "number", :value => "0"}
          
          .form-group  
            %label{:for => "electric", :class => "col-md-8 control-label"}
              Electric services ($50 per 20 amp circuit; 2400 watts max)
            .col-md-4
              %input#electric.form-control{:max => "4", :min => "0", :name => "electric", :oninput => "calcService()", :required => "", :step => "1", :type => "number", :value => "0"}
          
          .form-group  
            %label{:for => "internet", :class => "col-md-8 control-label"}
              Internet Service provided for Big Top tent ONLY ($50 per ethernet line)
            .col-md-4
              %input#internet.form-control{:max => "1", :min => "0", :name => "internet", :oninput => "calcService()", :required => "", :step => "1", :type => "number", :value => "0"}
          
          .form-group{:style => "border-top: 1px solid #5bc0de; padding-top:20px"}
          %h2 Extra booth furnishings
          
          .form-group  
            %label{:for => "ext_chairs", :class => "col-md-8 control-label"}
              Folding chairs @ $4 each
            .col-md-4
              %input#ext_chairs.form-control{:max => "8", :min => "0", :name => "ext_chairs", :oninput => "calcService()", :required => "", :step => "1", :type => "number", :value => "0"}
          
          .form-group  
            %label{:for => "ext_tables", :class => "col-md-8 control-label"}
              8 ft. skirted table(s) @ $25 each
            .col-md-4
              %input#ext_tables.form-control{:max => "4", :min => "0", :name => "ext_tables", :oninput => "calcService()", :required => "", :step => "1", :type => "number", :value => "0"}
          
          .form-group{:style => "border-top: 1px solid #5bc0de; padding-top:20px"}
          
          .form-group  
            %label{:for => "service_cost", :class => "col-md-8 control-label"} Total Cost of Services $
            .col-md-4
              %input#service_cost.form-control{:name => "service_cost", :required => "", :value => "0", :readonly => ""}
          
          .form-group{:style => "border-top: 1px solid #5bc0de; padding-top:20px"}
            .col-md-offset-3.col-md-6 
              %input#submit{:type => "submit", :value => "Submit Service Information", :class => "btn btn-info btn-block"}
          
          :javascript
            function calcService()
            {
              var electric = document.getElementById("electric").value;
              var internet = document.getElementById("internet").value; 
              var forklift = document.getElementById("forklift").value; 
              var table = document.getElementById("ext_tables").value; 
              var chair = document.getElementById("ext_chairs").value; 
              electric = parseFloat(electric);
              internet = parseFloat(internet);
              forklift = parseFloat(forklift);
              table = parseFloat(table);
              chair = parseFloat(chair);
              var total = 0;
              total = electric * 50 + internet * 50 + forklift * 25 + table * 25 + chair * 4;
              var serviceCost = document.getElementById("service_cost");
              serviceCost.value = total;
            }